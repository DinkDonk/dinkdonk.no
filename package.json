{
  "name": "dinkdonk.no",
  "domain": "dinkdonk.no",
  "version": "1.2.0",
  "description": "The dinkdonk.no website",
  "main": "index.js",
  "scripts": {
    "lint": "node node_modules/tslint/bin/tslint --format stylish src/**/*.ts || true",
    "build-ts": "./tools/build-ts.sh",
    "watch-ts": "./tools/watch-ts.sh",
    "build-scss": "node node_modules/sass/sass.js -q --load-path src/style src/style/main.scss build/app.css",
    "watch-scss": "node node_modules/sass/sass.js -q --watch --load-path src/style src/style/main.scss build/app.css",
    "build-scheme": "cp -rf src/script/dinkdonk-scheme/dinkdonk-scheme.js build/ && node tools/replace-in-file.js build/dinkdonk-scheme.js INJECT_CSS node_modules/dinkdonk-scheme/ace/dinkdonk.css",
    "build-markup": "mkdir -p build && rsync -a src/markup/* build/",
    "watch-markup": "node node_modules/onchange/dist/bin.js 'src/markup/*' -- npm run build-markup",
    "move-assets": "mkdir -p build/fonts && rsync -a assets/fonts build && npm run generate-favicon",
    "watch-assets": "node node_modules/onchange/dist/bin.js 'assets/**/*' -- npm run move-assets",
    "build": "mkdir -p build && npm run build-scheme && npm run build-ts && npm run build-markup && npm run build-scss && npm run build-projects && npm run move-assets && npm run generate-favicon && npm run generate-sitemap",
    "test": "npm run lint",
    "serve": "node node_modules/browser-sync/dist/bin.js start --server 'build' --files 'build' & npm run watch-ts & npm run watch-scss & npm run watch-markup & npm run watch-projects & npm run watch-assets",
    "serve-no-watch": "node node_modules/browser-sync/dist/bin.js start --server 'build' --files 'build'",
    "create-project": "./tools/create-project.sh",
    "build-projects": "node tools/build-projects.js",
    "watch-projects": "node node_modules/onchange/dist/bin.js 'src/projects/**/*' -- npm run build-projects",
    "generate-favicon": "./tools/generate-favicon.sh",
    "generate-sitemap": "node ./tools/generate-sitemap.js",
    "deploy": "./tools/deploy.sh",
    "start": "npm run serve"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/DinkDonk/dinkdonk.no.git"
  },
  "author": "Rune Warhuus <rune@dinkdonk.no>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DinkDonk/dinkdonk.no/issues"
  },
  "homepage": "https://github.com/DinkDonk/dinkdonk.no#readme",
  "devDependencies": {
    "@tweenjs/tween.js": "^18.6.4",
    "@types/lodash.throttle": "^4.1.6",
    "@types/node": "^15.6.1",
    "@types/tween.js": "0.0.31",
    "brace": "^0.11.1",
    "browser-sync": "^2.26.14",
    "browserify": "^17.0.0",
    "dinkdonk-scheme": "DinkDonk/dinkdonk-scheme",
    "es6-promise": "^4.2.8",
    "fs-extra": "^10.0.0",
    "lodash.throttle": "^4.1.1",
    "onchange": "^7.1.0",
    "replace-in-file": "^6.2.0",
    "router5": "^8.0.1",
    "sass": "^1.34.0",
    "simplebar": "^5.3.3",
    "source-map-support": "^0.5.19",
    "tsify": "^5.0.4",
    "tslint": "^5.1.0",
    "typescript": "^4.3.2",
    "uglify-js": "^3.13.8",
    "watchify": "^4.0.0",
    "xmlbuilder": "^15.1.1"
  }
}
