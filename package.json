{
  "name": "dinkdonk.no",
  "domain": "dinkdonk.no",
  "version": "1.0.0",
  "description": "The dinkdonk.no website",
  "main": "index.js",
  "scripts": {
    "lint": "node node_modules/tslint/bin/tslint --format stylish src/**/*.ts || true",
    "build-ts": "./tools/build-ts.sh",
    "watch-ts": "./tools/watch-ts.sh",
    "build-scss": "node-sass -q --include-path src/style src/style/main.scss build/app.css",
    "watch-scss": "node-sass -q --watch --include-path src/style src/style/main.scss build/app.css",
    "build-scheme": "cp -rf src/script/dinkdonk-scheme/dinkdonk-scheme.js build/ && node tools/replace-in-file.js build/dinkdonk-scheme.js INJECT_CSS node_modules/dinkdonk-scheme/ace/dinkdonk.css",
    "build-markup": "mkdir -p build && rsync -a src/markup/* build/",
    "watch-markup": "node node_modules/onchange/cli.js 'src/markup/*' -- npm run build-markup",
    "move-assets": "mkdir -p build/fonts && rsync -a assets/fonts build",
    "watch-assets": "node node_modules/onchange/cli.js 'assets/**/*' -- npm run move-assets",
    "build": "mkdir -p build && npm run build-scheme && npm run build-ts && npm run build-markup && npm run build-scss && npm run build-projects && npm run move-assets && npm run generate-favicon && npm run generate-sitemap",
    "test": "npm run lint",
    "serve": "node node_modules/browser-sync/bin/browser-sync.js start --server 'build' --files 'build' & npm run watch-ts & npm run watch-scss & npm run watch-markup & npm run watch-projects & npm run watch-assets",
    "serve-no-watch": "node node_modules/browser-sync/bin/browser-sync.js start --server 'build' --files 'build'",
    "create-project": "./tools/create-project.sh",
    "build-projects": "node tools/build-projects.js",
    "watch-projects": "node node_modules/onchange/cli.js 'src/projects/**/*' -- npm run build-projects",
    "generate-favicon": "./tools/generate-favicon.sh",
    "generate-sitemap": "node ./tools/generate-sitemap.js",
    "deploy": "./tools/deploy.sh",
    "start": "npm run serve"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/DinkDonk/dinkdonk.no.git"
  },
  "author": "Rune Warhuus <rune@dinkdonk.no>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DinkDonk/dinkdonk.no/issues"
  },
  "homepage": "https://github.com/DinkDonk/dinkdonk.no#readme",
  "devDependencies": {
    "@types/lodash.throttle": "^4.1.2",
    "@types/node": "^7.0.12",
    "@types/router5": "0.0.28",
    "@types/tween.js": "0.0.31",
    "brace": "^0.10.0",
    "browser-sync": "^2.18.8",
    "browserify": "^14.3.0",
    "dinkdonk-scheme": "DinkDonk/dinkdonk-scheme",
    "es6-promise": "^4.1.0",
    "fs-extra": "^2.1.2",
    "lodash.throttle": "^4.1.1",
    "node-sass": "^4.5.2",
    "onchange": "^3.2.1",
    "replace-in-file": "^2.5.0",
    "router5": "^4.5.2",
    "simplebar": "^2.2.2",
    "source-map-support": "^0.4.14",
    "tsify": "^3.0.1",
    "tslint": "^5.1.0",
    "tween.js": "^16.6.0",
    "typescript": "^2.2.2",
    "uglify-js": "^2.8.22",
    "watchify": "^3.9.0",
    "xmlbuilder": "^8.2.2"
  }
}
